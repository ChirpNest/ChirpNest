/dts-v1/;
#include "lorix-one-base.dtsi"

/ {
	model = "Wifx LORIX One (256MB NAND version)";
	compatible = "wifx,lorix-one", "atmel,sama5d4", "atmel,sama5";

	ahb {
		nand0: nand@80000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			nand-on-flash-bbt;
			atmel,has-pmecc;
			atmel,pmecc-cap = <4>;
			atmel,pmecc-sector-size = <512>;
			status = "okay";

			at91bootstrap@0 {
				label = "at91bootstrap";
				reg = <0x0 0x40000>;
			};

			bootloader@40000 {
				label = "bootloader";
				reg = <0x40000 0x140000>;
			};

			ubi@180000 {
				label = "ubi";
				reg = <0x180000 0x0FE80000>;
			};
		};
	};
};